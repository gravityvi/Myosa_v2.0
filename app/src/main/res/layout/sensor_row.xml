<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="280dp"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tSensorHead"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bla"
        android:text="@string/sensor_name"
        android:textAlignment="center"
        android:textColor="@color/wi"
        android:textSize="18sp" />

    <LinearLayout
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tAttribute"
            android:textColor="@color/bla"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Value"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tValue"
            android:textColor="@color/bla"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Value"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tUnit"
            android:textColor="@color/bla"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="unit"
            android:paddingLeft="5dp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:textSize="16sp"/>


    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/lineChart"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="5">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Min:"
                android:textColor="@color/bla"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eMinValue"
                android:hint="Min Value"
                android:textColor="@color/bla"
                android:textSize="14dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max:"
                android:textColor="@color/bla"/>

            <EditText
                android:id="@+id/eMaxValue"
                android:hint="Max Value"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bla"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/bSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set"
                android:layout_gravity="end"
                android:textColor="#ffffffff"
                android:theme="@style/MyButton" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>