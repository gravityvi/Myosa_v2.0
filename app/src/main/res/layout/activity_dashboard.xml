<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81F7F3"
    tools:context="com.example.ravi.mayosa.Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@color/wi"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            card_view:layout_goneMarginRight="0dp"
            card_view:layout_goneMarginBottom="0dp"
            card_view:layout_goneMarginTop="0dp"
            card_view:layout_goneMarginLeft="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/back_rounded"
                    android:text="Real Time Clock"
                    android:textAlignment="center"
                    android:textColor="@color/wi"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="time"
                        android:textColor="@color/myapp"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:gravity="start"/>

                    <TextView
                        android:id="@+id/tdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myapp"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:text="date"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Day"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:gravity="start"/>

                    <TextView
                        android:id="@+id/tday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/myapp"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:text="day"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!--Lumi-->
        <include android:id="@+id/sValue1" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue2" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue3" layout="@layout/sensor_row"/>
        <!--pressure-->
        <include android:id="@+id/sValue4" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue5" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue6" layout="@layout/sensor_row"/>
        <!--AQ sensor-->
        <include android:id="@+id/sValue7" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue8" layout="@layout/sensor_row"/>
        <!--Particle Sensor-->
        <include android:id="@+id/sValue9" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue10" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue11" layout="@layout/sensor_row"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@color/wi"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            card_view:layout_goneMarginRight="0dp"
            card_view:layout_goneMarginBottom="0dp"
            card_view:layout_goneMarginTop="0dp"
            card_view:layout_goneMarginLeft="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/back_rounded"
                    android:text="Particle Sensor"
                    android:textAlignment="center"
                    android:textColor="@color/wi"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Presence"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tPresence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="precence"
                        android:textColor="@color/myapp"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!--temp humi-->
        <include android:id="@+id/sValue12" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue13" layout="@layout/sensor_row"/>
        <include android:id="@+id/sValue14" layout="@layout/sensor_row"/>

        <!--Magnetometer-->
        <include android:id="@+id/sValue15" layout="@layout/sensor_3values"/>

        <!--RGB-->
        <include android:id="@+id/sValue16" layout="@layout/sensor_3values"/>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@color/wi"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            card_view:layout_goneMarginRight="0dp"
            card_view:layout_goneMarginBottom="0dp"
            card_view:layout_goneMarginTop="0dp"
            card_view:layout_goneMarginLeft="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/back_rounded"
                    android:text="RGB and Gesture Sensor"
                    android:textAlignment="center"
                    android:textColor="@color/wi"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gesture"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/tGesture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="precence"
                        android:textColor="@color/myapp"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!--MPU-->
        <include android:id="@+id/sValue17" layout="@layout/sensor_3values"/>
        <include android:id="@+id/sValue18" layout="@layout/sensor_3values"/>

    </LinearLayout>
</ScrollView>
